
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows a newly created user to create their own user document,
    // but no one else can. After creation, only the user themselves can access it.
    // This is the key to fixing the registration failure.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
